<?xml version="1.0" encoding="utf-8"?>
<scene>
  <!-- set up our shaders -->
  <shaders>
    <program name="program">
      <shader type="vertex" src="res/shaders/vertex.shader" />
      <shader type="fragment" src="res/shaders/fragment.shader" />
    </program>
  </shaders>
  
  <!-- load in our world -->
  <world>
    <camera shader="program" position="0.0,0.0,5.0" />

    <model shader="program" name="monkey" src="res/3d/monkey.stl" position="0.0,0.0,0.0" />
  </world>
</scene>